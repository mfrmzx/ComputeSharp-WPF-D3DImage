      <PackageReference Include="Microsoft.Net.Compilers.Toolset" Version="4.4.0-2.final" PrivateAssets="all" />
      <PackageReference Include="Silk.NET.Direct3D9" Version="2.16.0" />
    </ItemGroup>

</Project>
