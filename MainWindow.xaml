<Window x:Class="YQCool.ComputeSharp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Wpf="clr-namespace:YQCool.ComputeSharp.Wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <Wpf:ComputeShaderD3DImage x:Name="ComputeShaderD3DImage" IsShowFps="True" />
        <Button Width="40"
                Height="30"
                Margin="10,10,110,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="PauseButton_OnClick"
                Content="暂停" />
        <Button Width="40"
                Height="30"
                Margin="10,10,60,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="LastButton_OnClick"
                Content="上一个" />
        <Button Width="40"
                Height="30"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="NextButton_OnClick"
                Content="下一个" />
    </Grid>
</Window>